<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#AFAFAF"
    android:orientation="vertical"
    tools:context=".DetailDishes">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:srcCompat="@drawable/madera"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"

            app:srcCompat="@drawable/mesa_de_trabajo_25" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="265dp"
            android:background="#00FFFFFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Waffle Fantasía"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="247dp"
            android:layout_height="46dp"
            android:layout_marginTop="300dp"
            android:layout_gravity="clip_horizontal"

            android:background="#00FBF7F7"
            android:max="4"
            android:progress="2"
            android:progressBackgroundTint="#FF0553"
            android:progressTint="#FF0553"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:secondaryProgressTint="#350111" />

        <EditText
            android:id="@+id/editTextTextPersonName7"
            android:layout_width="142dp"
            android:layout_height="62dp"
            android:backgroundTint="#00FFFFFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="4.2"
            android:layout_marginHorizontal="200dp"
            android:layout_marginTop="300dp"
            android:textAlignment="center"
            android:textSize="34sp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="181dp"
            android:layout_height="42dp"
            android:layout_marginHorizontal="180dp"
            android:layout_marginVertical="330dp"
            android:backgroundTint="#00FFFFFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="15 Opiniones"
            android:textAlignment="center"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="232dp"
            android:layout_height="45dp"
            android:backgroundTint="#00FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="360dp"

            android:ems="10"
            android:inputType="textPersonName"
            android:text="Porción para 2 Personas"
            android:textAlignment="center"

            />

        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="232dp"
            android:layout_height="45dp"
            android:backgroundTint="#00FFFFFF"
            android:ems="10"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="385dp"
            android:inputType="textPersonName"
            android:text="Para ir con: La Familia"
            android:textAlignment="center"
            android:textStyle="italic"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button3"
            android:layout_width="51dp"
            android:layout_height="64dp"
            android:background="#00FFFFFF"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="370dp"
            android:text="Button"
            app:icon="@android:drawable/ic_menu_myplaces"
            app:iconTint="#FF0553"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editTextTextMultiLine"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:background="#00FFF6F6"
            android:backgroundTint="#65CCCCCC"
            android:backgroundTintMode="add"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="430dp"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="Waffle con sabor a fresa con una explosión de diversos sabores de helado acompañado de magia en chispas de colores y maní con salsa de chocolate."
            android:textAlignment="center"
            android:textColor="#494949"
            android:textStyle="italic"
            tools:ignore="MissingConstraints,RtlCompat" />

        <EditText
            android:id="@+id/editTextTextMultiLine3"
            android:layout_width="126dp"
            android:layout_height="41dp"
            android:backgroundTint="#AAAAAA"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="Contiene:"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="560dp"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:ignore="MissingConstraints,,RtlCompat" />

        <EditText
            android:id="@+id/editTextTextMultiLine4"
            android:layout_width="352dp"
            android:layout_height="80dp"
            android:backgroundTint="#00FFFFFF"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="Helado de Chocolate, Helado de vainilla, Helado de Arequipe, trozos de maní, masmellows, chispas de colores, waffle sabor fresa."
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="600dp"
            android:textColor="#757575"
            android:textSize="16sp"
            tools:ignore="MissingConstraints,RtlCompat" />

        <Button
            android:id="@+id/button2"
            android:layout_width="63dp"
            android:layout_height="46dp"

            android:background="#00FFFFFF"
            app:icon="@android:drawable/star_big_off"
          android:layout_marginHorizontal="270dp"
            android:layout_marginTop="30dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button"
            android:layout_width="66dp"
            android:layout_height="49dp"


            android:background="#00FFFFFF"
            android:backgroundTint="#FDFDFD"
            android:drawableTint="#ECE8E8"
            android:layout_marginHorizontal="270dp"
            android:layout_marginTop="60dp"

            app:icon="@android:drawable/ic_menu_share"
            app:iconTint="#FFFFFF" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>