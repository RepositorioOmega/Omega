<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginStart="10dp"
    android:background="@drawable/back2"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/ivPlace"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNamePlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textColor="#0E0B0B"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/ivPlace"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Perro mono" />

    <TextView
        android:id="@+id/tvDesc1place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="#A9120D0D"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/tvNamePlace"
        app:layout_constraintTop_toBottomOf="@+id/tvNamePlace"
        tools:text="Comida rapida costena" />

    <TextView
        android:id="@+id/tvAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="#81201919"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tvDesc1place"
        app:layout_constraintTop_toBottomOf="@+id/tvDesc1place"
        tools:text="Calle 26 #7-14" />

    <RatingBar
        android:id="@+id/ratingBar2"
        style="@android:style/Widget.DeviceDefault.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="24dp"
        android:numStars="5"
        android:progressBackgroundTint="#FF0553"
        android:progressTint="#FF0553"
        android:rating="4"
        android:scaleX="0.7"
        android:scaleY="0.75"
        app:layout_constraintStart_toStartOf="@+id/ivPlace"
        app:layout_constraintTop_toBottomOf="@+id/tvAdress" />

</androidx.constraintlayout.widget.ConstraintLayout>